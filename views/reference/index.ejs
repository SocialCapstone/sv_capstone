<!-- reference/index.ejs -->
<!-- 자료실 게시글 목록 -->



<div class="board_wrap">
    <div class="board_title">
        <strong>자료실</strong>
        <p>자료실 게시판입니다.</p>
    </div>
    <div class="board_list_wrap">
        <div class="board_list">
            <div class="top">
                <div class="num">분류</div>
                <div class="title" style="width: 70%">제목</div>
                <div class="writer">작성기관</div>
                <div class="date">등록일</div>
            </div>
            
            <% for(let post of indexPosts) { %>
            <div>
                <div class="num">
                    <% if(post.tag ==="논문") { %>
                    <button type="button" class="btn btn-warning">논문</button>
                    <%} else if(post.tag ==="도서") {%>
                    <button type="button" class="btn btn-danger">도서</button>
                    <%} else if(post.tag==="동영상") {%>
                    <button type="button" class="btn btn-success">동영상</button>
                    <%}%>
                </div>
                <div class="title" style="width: 70%"><a href="<%=post.link%>"><%=post.title%></a></div>
                <div class="writer"><%=post.agency%></div>
                <div class="date"><%=post.date%></div>
            </div>
            <%} %>
        </div>

        <!-- 페이지 이동 -->
        <div class="board_page">
            <% if(prev) {%>
                <a href="/reference?page=<%=startPage-1%>&nickname=<%=user%>" class="bt prev"><</a>
            <%}%>
        
                    <% for(let page = startPage; page <=endPage; page++) {%>
                        <% if(page === currentPage) {%>
                            <a href="/reference?page=<%=page%>" class="num on"><%=page%></a>
                        <% } else{%>
                            <a href="/reference?page=<%=page%>" class="num"><%=page%></a> 
                        <%}%>
                    <%}%>
                    
            <% if(next) {%>
                <a href="/reference?page=<%=endPage+1%>" class="bt next">></a>
            <%}%>
        </div>
    </div>
</div>