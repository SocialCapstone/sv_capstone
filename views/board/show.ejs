<!-- board/show.ejs -->
<!-- 자유게시판 게시글 확인 -->

<div class="board_wrap">
    <div class="board_title">
        <strong>자유게시판</strong>
    </div>
    <div class="board_view_wrap">
        <div class="board_view">
            <div class="title">
                <%= board.title %>
            </div>
            <div class="info">
                <dl>
                    <dt>번호</dt>
                    <dd><%=board.post_id%></dd>
                </dl>
                <dl>
                    <dt>글쓴이</dt>
                    <dd><%=board.author%></dd>
                </dl>
                <dl>
                    <dt>작성일</dt>
                    <dd><%=board.date%></dd>
                </dl>
                <dl>
                    <dt>조회</dt>
                    <dd><%=board.count%></dd>
                </dl>
            </div>
            <div class="cont">
                <p id="contents">
                    <%=board.content%>
                </p>
                <% if (board.img) {%>
                <img src="<%=board.img%>" alt="" width="300px" height="300px">
                <% }%>
            </div>
        </div>
        <div class="bt_wrap">
            <a href="list.html" class="on">목록</a>
            <a href="edit.html">수정</a>
        </div>
    </div>
</div>

<script>
    const contents = document.querySelector('#contents');
    contents.innerText =contents.innerText.replaceAll('<br>','\r\n'); 
</script>
