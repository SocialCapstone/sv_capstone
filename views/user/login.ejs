<!-- 로그인 페이지 -->

<form action="/login" method="post">
    <section class="login">
        <h2>로그인</h2>
        <ul style="list-style-type: none">
            <li><input type="text" placeholder="이메일(아이디)" title="아이디입력" name="email"/></li>
            <li>
                <input type="password" placeholder="비밀번호" title="비밀번호입력"  name="password"/>
            </li>
            <li>
                <input type="checkbox" id="chk_id" value="on" /><label for="chk_id">아이디저장</label>
            </li>

            <button>로그인</button>
        </ul>
        <div>
            <ul style="list-style-type: none">
                <li>
                    <a href="/register" style="text-decoration-line: none">회원가입</a>
                </li>
                <li><a href="" style="text-decoration-line: none">아이디찾기</a></li>
                <li>
                    <a href="" style="text-decoration-line: none">비밀번호찾기</a>
                </li>
            </ul>
        </div>
    </section>
</form>