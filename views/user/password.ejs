<form action="/profile/edit?_method=PUT" method="post">
    <section id="login">
        <h2>비밀번호 변경</h2>
        <ul style="list-style-type: none">
            <li><input type="password" placeholder="현재 비밀번호" title="현재 비밀번호"  name="password"/></li>
            <li>
                <input type="password" placeholder="새로운 비밀번호" title="새로운 비밀번호"  name="nextPass"/>
            </li>
            <li>
                <input type="password" placeholder="새로운 비밀번호 확인" title="새로운 비밀번호"  name="nextPass_confirm"/>
            </li>
            <button>확인</button>
        </ul>
        <div>
            <ul style="list-style-type: none">
                <li>
                    <a href="/register" style="text-decoration-line: none">회원가입</a>
                </li>
                <li><a href="" style="text-decoration-line: none">아이디찾기</a></li>
                <li>
                    <a href="" style="text-decoration-line: none">비밀번호찾기</a>
                </li>
            </ul>
        </div>
    </section>
</form>